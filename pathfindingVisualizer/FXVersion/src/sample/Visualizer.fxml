<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.control.TreeItem?>
<?import javafx.scene.control.Separator?>

<?import java.net.URL?>
<?import javafx.scene.layout.RowConstraints?>
<BorderPane fx:id="root" id="root" fx:controller="sample.Controller" prefHeight="800" prefWidth="800" maxHeight="800" stylesheets="@style.css"
            xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
<!--    Sets margin for BorderPane-->

<!--    Elements in left side of BorderPane-->
    <left>
        <!--This GridPane is used to organize the buttons that control what type of node the user wants to place-->
        <GridPane fx:id="buttonGrid" id="button-grid" BorderPane.alignment="TOP_LEFT" hgap="10" vgap="10" prefHeight="800">
            <rowConstraints>
                <RowConstraints percentHeight="20"/>
                <RowConstraints percentHeight="5"/>
                <RowConstraints percentHeight="1"/>
                <RowConstraints percentHeight="5"/>
                <RowConstraints percentHeight="5"/>
                <RowConstraints percentHeight="5"/>
                <RowConstraints percentHeight="10"/>
                <RowConstraints percentHeight="40"/>

            </rowConstraints>
            <ChoiceBox fx:id="algorithmSelector" value="Breadth First Search (BFS)" onAction="#changeAlgorithm"
                       GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.vgrow="always"
                       GridPane.halignment="CENTER" GridPane.fillWidth="true">
                <String fx:value="Breadth First Search (BFS)"/>
                <String fx:value="Depth First Search (DFS)"/>
                <Separator/>
                <String fx:value="A*"/>
                <String fx:value="Dijkstra's"/>
            </ChoiceBox>
            <Label fx:id="nodeBtnTitle" id="node-btn-title" text="Select Node Type:"
                GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.vgrow="ALWAYS" GridPane.halignment="LEFT"/>
            <Separator GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.vgrow="ALWAYS" GridPane.halignment="CENTER"/>
            <Button fx:id="setStartBtn" text="Start" onAction="#changeNodeType" styleClass="node-selector"
                GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.vgrow="always" GridPane.halignment="CENTER"/>
            <Button fx:id="setEndBtn" text="End" onAction="#changeNodeType" styleClass="node-selector"
                    GridPane.rowIndex="3" GridPane.columnIndex="1" GridPane.vgrow="always" GridPane.halignment="CENTER"/>
            <Button fx:id="setWallBtn" text="Wall" onAction="#changeNodeType" styleClass="node-selector"
                    GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.vgrow="always" GridPane.halignment="CENTER"/>
            <Button fx:id="setWeightedBtn" text="Weighted" onAction="#changeNodeType" styleClass="node-selector"
                    GridPane.rowIndex="4" GridPane.columnIndex="1" GridPane.vgrow="always" GridPane.halignment="CENTER"/>
            <Label fx:id="setTypeLabel" id="set-type-label" text=" Selecting Start Node"
                   GridPane.rowIndex="5" GridPane.columnIndex="0" GridPane.columnSpan="2"
                   GridPane.vgrow="always" GridPane.halignment="CENTER"/>
            <CheckBox fx:id="diagonalCheckBox" text="Allow Diagonal" onAction="#checkboxTransition"
                    GridPane.rowIndex="6" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.vgrow="always"
                      GridPane.halignment="CENTER"/>
            <Button fx:id="startVisualizerBtn" id="start-visualizer-btn" text="Start Visualizer" onAction="#startVisualizer"
                    GridPane.rowIndex="7" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.vgrow="always"
                    GridPane.halignment="CENTER" GridPane.valignment="BOTTOM"/>
        </GridPane>
    </left>

    <!--    Elements in center of BorderPane-->
    <center>
        <GridPane fx:id="grid" BorderPane.alignment="CENTER">

        </GridPane>
    </center>

</BorderPane>